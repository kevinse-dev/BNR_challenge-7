<!-- Code ini akan berjalan bila terjadi error -->
<%- include('partials/head') -%>
<body>
    <div class="bg-dark text-white d-flex justify-content-center" style="height: 880px;">
        <div class="w-50">
            <div class="bg-success mt-5 me-5 ms-5 p-5">
                    <form action="/admin/register" method="post">
                        <h1>Register</h1>
                        <hr>
                        <br>
                        <label for="username" class="form-label">
                            <h5>Username</h5>
                        </label>
                        <br>
                        <input class="form-control mx-5 w-75" type="text" name="username" placeholder="Insert your username">
                        <br>
                        <br>
                        <label for="password" class="form-label">
                            <h5>Password</h5>
                        </label>
                        <br>
                        <input type="password" class="form-control mx-5 w-75" name="password" placeholder="Insert your password">
                        <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary px-5 py-2 mt-5">Submit</button>
                        </div>
                    </form>
            </div>
        </div>
    </div>
</body>
</html>