                <input value="<%= player.score %>" type="number" class="form-control mx-5 w-75" name="score"
                  >
                  
                  <label for="diamond" class="form-label">
                  <h5>Diamond</h5>
                </label>
                <br>
                <input value="<%= player.diamond %>" type="number" class="form-control mx-5 w-75" name="diamond">


                <div class="d-flex justify-content-center">
                  <button type="submit" class="btn btn-primary px-5 py-2 mt-5">Update</button>
                </div>
